<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0072BB</item>
        <item name="colorPrimaryDark">#0072BB</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/optionMenu</item>
    </style>

    <style name="optionMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:popupBackground">#ffca3a</item>
        <item name="android:actionMenuTextColor">#ffffff</item>
    </style>

    <style name="EditTextNote">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AccountTextStyle">
        <item name="android:textColor">#F8FEFE</item>
        <item name="android:textSize">20sp</item>
        <!--最多显示1行-->
        <item name="android:maxLines">1</item>
        <!--垂直滚动条-->
        <item name="android:scrollbars">vertical</item>
        <!--单行-->
        <item name="android:singleLine">true</item>
    </style>

    <!--自定义EditText的下划线-->
    <style name="Theme.Custom.Control.EditText" parent="Theme.AppCompat.Light">
        <!--EditText未被激活时的下划线颜色-->
        <item name="colorControlNormal">#00000000</item>
        <!--EditText激活时的下划线颜色-->
        <item name="colorControlActivated">#00000000</item>
    </style>

    <style name="LoginEditTextTheme" parent="AccountTextStyle">

        <item name="android:textColorHint">#B0FFFFFF</item>
        <!--光标颜色-->
        <item name="android:textCursorDrawable">@drawable/login_cursor</item>
        <item name="android:theme">@style/Theme.Custom.Control.EditText</item>
        <!--下划线颜色-->
        <item name="android:backgroundTint">#00000000</item>
        <!--选中文本的背景颜色-->
        <item name="android:textColorHighlight">#8090df24</item>
    </style>

    <!--textView默认不获取焦点-->
    <style name="ClickableTextView">
        <item name="android:textColor">@drawable/bg_hypertext</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>
